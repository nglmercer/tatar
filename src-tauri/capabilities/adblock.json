{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "adblock",
  "description": "Permissions for remote URLs to access Tauri API",
  "windows": ["main"],
  "remote": {
    "urls": [
      "https://music.youtube.com/*",
      "https://*.youtube.com/*",
      "https://*.google.com/*",
      "https://*.googlevideo.com/*"
    ]
  },
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "core:event:default",
    "core:app:default"
  ],
  "command": {
    "allow": [
      "is_url_blocked",
      "is_adblock_ready",
      "get_cosmetic_resources",
      "check_batch_urls",
      "get_hidden_class_id_selectors"
    ]
  }
}